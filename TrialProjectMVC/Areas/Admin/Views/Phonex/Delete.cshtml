@model PhoneModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Kayıt Sil</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="PhoneId" hidden />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary"></h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Phone" disabled class="form-control border-0 shadow" />
                    <label asp-for="Phone" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Address" disabled class="form-control border-0 shadow" />
                    <label asp-for="Address" class="ms-2"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Sil</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Phonex" asp-action="Index" class="btn btn-secondary border form-control">
                            Rehbere geri dön
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
